<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/editTextTextTenDoVat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="177dp"
        android:ems="10"
        android:hint="Nhập tên đồ vật"
        android:inputType="textPersonName"
        android:textColor="#ED0606"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:hint="Mô tả"
        android:inputType="textPersonName"
        android:textColor="#F10606"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageViewKhungLoadingAnh"
        android:layout_width="164dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="-1dp"
        app:srcCompat="@drawable/icons8_full_image_40px" />

    <Button

        android:id="@+id/buttonThem"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="113dp"
        android:text="Thêm" />

    <Button

        android:id="@+id/buttonHuy"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="314dp"
        android:layout_marginTop="117dp"

        android:layout_marginEnd="6dp"
        android:text="Huỷ" />

    <ImageButton
        android:id="@+id/imageButtonCamera"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="35dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/icons8_camera_30px" />

    <ImageButton
        android:id="@+id/imageButtonThuVien"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="304dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="7dp"
        android:background="@null"
        app:srcCompat="@drawable/icons8_image_100px_1" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="305dp" />
</RelativeLayout>